# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=tc

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=5256000  # 10 years

# Auth Server Configuration
AUTH_SERVER_URL=http://localhost:8000/auth
AUTH_SERVER_ENABLED=false  # Set to true in production

# Default Admin User (Change these in production!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_EMAIL=admin@your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=1000
WRITE_RATE_LIMIT_PER_MINUTE=50
